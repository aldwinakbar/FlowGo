<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>


    <!-- Style Icon and Text -->
    <style name="Front_Icon">
        <item name="android:layout_width">120dp</item>
        <item name="android:layout_height">120dp</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginLeft">32dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:padding">30dp</item>
        <item name="android:scaleType">fitCenter</item>
    </style>

    <style name="Icon">
        <item name="android:layout_width">75dp</item>
        <item name="android:layout_height">75dp</item>
        <item name="android:scaleType">fitXY</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="Icon.front">
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="Title_bar">
        <item name="android:color">#ff5722</item>
    </style>

    <style name="Logo">
        <item name="android:layout_width">200dp</item>
        <item name="android:layout_height">200dp</item>
    </style>

    <style name="Apps_Name">
        <item name="android:textSize">50sp</item>
        <item name="android:textColor">@color/pure_white</item>
    </style>

    <style name="Divider">
        <item name="android:background">?android:attr/listDivider</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">5dp</item>
    </style>

    <style name="Divider.table_horizontal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">5dp</item>
    </style>

    <style name="Divider.table_vertical">
        <item name="android:layout_width">5dp</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="Divider_vertical">
        <item name="android:layout_width">3dp</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>

    <style name="Divider_vertical.front">
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_marginLeft">88dp</item>
        <item name="android:background">@color/material_blue_500</item>
    </style>

    <!-- Table -->
    <style name="Table">
        <item name="android:src">@drawable/shape_rounded_rectangle</item>
        <item name="android:layout_width">200dp</item>
        <item name="android:layout_height">104dp</item>
    </style>

    <style name="Table.header">
        <item name="android:background">@color/material_red_900</item>
        <item name="android:textSize">40sp</item>
        <item name="android:padding">5dp</item>
    </style>

    <style name="Table.row">
        <item name="android:textSize">32sp</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="Table.footer">
        <item name="android:background">@color/material_red_100</item>
        <item name="android:layout_width">400sp</item>
        <item name="android:textSize">40sp</item>
    </style>
    <!-- Layout builder -->
    <style name="Layout">
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_alignParentRight">true</item>
    </style>

    <style name="Layout.Action_bar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/w_topbar_height</item>
        <item name="android:background">@color/material_blue_500</item>
    </style>

    <style name="Layout.Main_bar">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginTop">@dimen/w_margintop_mainbar</item>
    </style>

    <style name="Layout.Powered_bar">
        <item name="android:layout_height">20dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginBottom">@dimen/w_marginbottom_bottombar</item>
    </style>

    <style name="action_overflow">
        <item name="android:layout_width">72dp</item>
        <item name="android:layout_height">72dp</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginTop">14dp</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:background">@color/material_blue_500</item>
    </style>

    <!-- Main Display -->
    <style name="Display">
        <item name="android:layout_marginLeft">72dp</item>
    </style>

    <!-- Main Display TextView -->
    <style name="Display.Text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="Display.Text.Title">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="Display.Text.Subhead">
        <item name="android:textSize">32sp</item>
        <item name="android:layout_marginTop">64dp</item>
        <item name="android:layout_marginLeft">72dp</item>
    </style>

    <style name="Display.Text.Message">
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginTop">150dp</item>
        <item name="android:layout_marginLeft">72dp</item>
    </style>

    <style name="Display.Text.Body">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Display.Text.Warning">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/material_red_900</item>
    </style>

    <style name="Front_menu">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:padding">50dp</item>
    </style>

    <style name="Front_choice">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">200dp</item>
        <item name="android:layout_marginTop">40dp</item>
        <item name="android:textSize">40sp</item>
        <item name="android:textColor">@color/material_blue_500</item>
    </style>

    <style name="Front_subtitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:textSize">32sp</item>
        <item name="android:textColor">@color/material_blue_500</item>
    </style>

    <!-- Button Style -->
    <style name="Button">
        <item name="android:layout_width">160dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">10dp</item>
        <item name="android:textSize">40sp</item>
    </style>

    <style name="Button.positive">
        <item name="android:background">@color/material_blue_500</item>
        <item name="android:src">@drawable/component_button</item>
        <item name="android:textColor">@color/pure_white</item>
        <item name="android:text">@string/button_ok</item>
    </style>

    <style name="Button.negative">
        <item name="android:src">@color/pure_white</item>
        <item name="android:background">@drawable/component_button</item>
        <item name="android:textColor">@color/material_blue_500</item>
        <item name="android:text">@string/button_cancel</item>
    </style>

</resources>
